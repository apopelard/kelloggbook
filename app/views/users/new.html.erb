<div class="page-header">
  <h1>New User</h1>
</div>

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :program_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :program_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :section_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :section_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :kwest_attended, "Which KWEST trip did you attend?", class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :kwest_attended, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :kwest_led, "Which KWEST trip did you lead?", class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :kwest_led, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :quote, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :quote, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :agreement, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :agreement %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create User", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
